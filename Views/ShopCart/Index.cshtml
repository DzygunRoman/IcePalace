@model ShopCartViewModel
<div class="container mt-5">
    @foreach (var el in Model.shopCart.CartDetails)
    {
        <div class="alert alert-warning mt-3">
            <b>Услуга: </b>@el.Product.Name<br/>
            <b>Цена: </b>@el.Product.price.ToString("c")
        </div>
    }
    <hr/>
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Оплатить</a>
</div>
