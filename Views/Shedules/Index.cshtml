@model IEnumerable<AcePalace.Models.Shedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Расписание мероприятий</h1>

<p>
    <a asp-action="Create">создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SheduleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trener)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SheduleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trener)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DateTime, "{0:dd/MM/yyyy}")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SheduleID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.SheduleID">Детальная информация</a> |
                <a asp-action="Delete" asp-route-id="@item.SheduleID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
