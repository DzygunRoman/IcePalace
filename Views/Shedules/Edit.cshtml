@model AcePalace.Models.Shedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Расписание</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SheduleID" />
            <div class="form-group">
                <label asp-for="SheduleName" class="control-label"></label>
                <input asp-for="SheduleName" class="form-control" />
                <span asp-validation-for="SheduleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trener" class="control-label"></label>
                <input asp-for="Trener" class="form-control" />
                <span asp-validation-for="Trener" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
